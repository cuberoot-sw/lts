<h4>Apply For Leave:-</h4>
<%= form_for @leave, :url => { :action => "create" } do |f| %>

  <div class="field-grey">
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date, :order => [:month, :day, :year] %>
  </div>
  <hr />
  <div class="field-eDate">
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date, :order => [:month, :day, :year]  %>
  </div>

  <div class="field-reason">
    <%= f.label :reason %><br />
    <%= f.text_area :reason, :size => "30*10" %>
  </div>

