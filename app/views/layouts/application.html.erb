<!DOCTYPE html>
<html>
 <head>

   <title>CuberootLts</title>

  <%= stylesheet_link_tag    "bootstrap.min", "lts","jquery-ui-1.8.23.custom", :media => "all" %>
  <%= javascript_include_tag "application","jquery-1.7.2.min","jquery-ui-1.8.23.custom.min" %>
  <%= csrf_meta_tags %>
  <h1>Cube Root Lts.</h1>
  <hr />
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Cube Root LTS</a>
      <div class="nav-collapse">
      <!-- <ul class="nav">
          <li class="active"><a href="#">Home</a></li>
          <li><a href="#holidays_index_path">Holiday List</a></li>
        </ul> -->
        <!--/.nav-collapse -->
        <div id="user_nav" class="pull-right">
          <% if user_signed_in? %>
            Signed in as <%= current_user.email %>. Not you?
            <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
            <% if current_user.role == 'manager' or current_user.role == 'employee' %>
              <%= label_tag 'Year' %>
              <%= session[:current_year] %>
              <%= link_to 'Change Year', change_year_leave_path(current_user.id) %>
            <% end %>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
          <% end %>
        </div>
      </div>
    </div>
 </div>
</div>

<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <!-- Example row of columns -->
  <div class="row">
    <div class="span3">
      <%= yield :sidebar %>
    </div>

    <div class="span9">
      <%= yield %>
    </div>
  </div>

  <hr>

  <footer>
    <p>&copy; Cube Root Software India 2011</p>
  </footer>

</div> <!-- /container -->

</body>
</html>
