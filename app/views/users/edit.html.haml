%h2 Edit Employee's Information
= form_for @user, url: { action: "update" } do |f|
  - @user.errors.full_messages.each do |msg|
    %p= msg
  .field
    = f.label :email
    %br/
    = f.text_field :email
  %br/
  .field
    = f.label :manager_id
    %br/
    = f.select("manager_id", options_for_select(!@valid_managers_email.blank? ? @valid_managers_email : ""))
  %br/
  .field
    = f.radio_button :role, 'employee'
    Employee
    \#{f.radio_button :role, 'manager'}Manager
  .field
    = f.label :Joining_Date
    = f.date_select :joining_date
  .action
    = f.submit "Change", :class => "btn btn-primary"
    %br/
  %br/
%br/
= link_to 'Back', user_management_user_path(current_user.id)
